# Judol Hunter - Environment Configuration
# Copy this file to .env and adjust values

# Database
# For SQLite (development):
DATABASE_URL=sqlite+aiosqlite:///./judolhunter.db

# For MySQL (production):
# DATABASE_URL=mysql+aiomysql://username:password@localhost:3306/judolhunter

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32

# Application
APP_NAME=Judol Hunter
APP_VERSION=2.0.0
DEBUG=false

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:8000,http://localhost:3000

# Rate Limiting (optional - for Redis backend)
REDIS_URL=redis://localhost:6379/0

# JWT Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Scanning
SCAN_TIMEOUT=15.0

# Anonymous Quotas
MAX_URLS_PER_SCAN_UNAUTH=5
MAX_DOMAINS_PER_WEEK_UNAUTH=2

# Free Plan Quotas
MAX_URLS_PER_SCAN_FREE=20
MAX_DOMAINS_PER_WEEK_FREE=3
